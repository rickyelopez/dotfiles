#!/bin/sh

export EDITOR=nvim

# make ssh work in tmux
if [ -n "$SSH_TTY" ]; then
    export SSH_AUTH_SOCK=~/.ssh/ssh_auth_sock.$HOSTNAME
fi

export UNCRUSTIFY_CONFIG=~/.config/uncrustify2.cfg
export NVIM_LISTEN_ADDRESS=~/.local/state/nvim/nvimsocket.$HOSTNAME


export fw=~/repos/firmware
export lb=last-built
export ft=feature
export bp=bypass
export dv=develop
export lbdv=last-built/develop

